@model Model.SalaParticularViewModel

@{
    ViewData["Title"] = "Details";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-secondary">
                    <div class="card-header">
                        <h2 class="card-title">Detalhes da Sala Particular</h2>
                    </div>

                    <div class="card-body">
                        <div class="col-md-10">
                            <dl class="dl-horizontal">                             
                                <dt>
                                    @Html.DisplayNameFor(model => model.Responsavel)
                                </dt>
                                <dd>
                                    <p class="form-control"> @Html.DisplayFor(model => model.Responsavel.Nome)</p>
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.SalaId)
                                </dt>
                                <dd>
                                    <p class="form-control"> @Html.DisplayFor(model => model.SalaId.Titulo)</p>
                                </dd>
                            </dl>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a href="@Url.Action("Edit", "SalaParticular", new { id = @Model.Id })" class="btn btn-info"> Editar </a> |
                        <a class="btn btn-primary" asp-action="Index">Voltar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
