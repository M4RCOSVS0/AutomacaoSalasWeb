@model Model.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<h4>LoginViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="login" asp-action="Authenticate">
            <div class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Login" class="control-label"></label>
                <input asp-for="Login" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" type="password" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Logar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Create" asp-controller="usuario">Criar Usuario</a>
</div>

