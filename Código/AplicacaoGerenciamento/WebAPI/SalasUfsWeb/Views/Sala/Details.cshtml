@model Model.SalaModel

@{
    ViewData["Title"] = "Details";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-secondary">
                    <div class="card-header">
                        <h2 class="card-title">Detalhes da Sala</h2>
                    </div>
                    <div class="card-body">

                        <div class="col-md-10">

                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.Id)
                                </dt>
                                <dd>
                                    <p class="form-control">  @Html.DisplayFor(model => model.Id) </p>
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.Titulo)
                                </dt>
                                <dd>
                                    <p class="form-control"> @Html.DisplayFor(model => model.Titulo) </p>
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.BlocoId)
                                </dt>
                                <dd>
                                    <p class="form-control"> @Html.DisplayFor(model => model.BlocoId) </p>
                                </dd>
                            </dl>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a href="@Url.Action("Edit", "Sala", new { id = @Model.Id })" class="btn btn-info">Editar </a> |
                        <a class="btn btn-primary" asp-action="Index">Voltar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>